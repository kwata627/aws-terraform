{
    "production": {
        "ec2_id": "${PROD_EC2_ID:-}",
        "rds_identifier": "${PROD_RDS_IDENTIFIER:-wp-example-rds}",
        "s3_bucket": "${PROD_S3_BUCKET:-wp-example-s3}",
        "domain_name": "${PROD_DOMAIN_NAME:-example.com}",
        "ssh_user": "${SSH_USER:-ec2-user}",
        "ssh_key_file": "${SSH_PRIVATE_KEY_FILE:-~/.ssh/ssh_key}"
    },
    "validation": {
        "ec2_id": "${VALID_EC2_ID:-}",
        "rds_identifier": "${VALID_RDS_IDENTIFIER:-wp-example-rds-validation}",
        "s3_bucket": "${VALID_S3_BUCKET:-wp-example-s3-validation}",
        "domain_name": "${VALID_DOMAIN_NAME:-test.example.com}",
        "ssh_user": "${SSH_USER:-ec2-user}",
        "ssh_key_file": "${SSH_PRIVATE_KEY_FILE:-~/.ssh/ssh_key}"
    },
    "deployment": {
        "auto_approve": "${AUTO_APPROVE:-false}",
        "rollback_on_failure": "${ROLLBACK_ON_FAILURE:-true}",
        "notification_email": "${NOTIFICATION_EMAIL:-}",
        "log_level": "${LOG_LEVEL:-INFO}",
        "backup_before_deployment": "${BACKUP_BEFORE_DEPLOYMENT:-true}"
    },
    "aws": {
        "region": "${AWS_REGION:-ap-northeast-1}",
        "profile": "${AWS_PROFILE:-default}",
        "max_retries": "${AWS_MAX_RETRIES:-3}"
    },
    "security": {
        "ssh_allowed_ip": "${SSH_ALLOWED_IP:-}",
        "enable_ssl": "${ENABLE_SSL:-true}",
        "enable_waf": "${ENABLE_WAF:-false}"
    }
} 