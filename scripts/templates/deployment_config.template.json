{
    "production": {
        "ec2_instance_id": "${PROD_EC2_INSTANCE_ID:-}",
        "rds_identifier": "${PROD_RDS_IDENTIFIER:-wp-shamo-rds}",
        "wordpress_url": "${PROD_WORDPRESS_URL:-}",
        "backup_retention_days": "${BACKUP_RETENTION_DAYS:-7}",
        "ssh_user": "${SSH_USER:-ubuntu}",
        "ssh_key_path": "${SSH_KEY_PATH:-~/.ssh/id_rsa}"
    },
    "validation": {
        "ec2_instance_id": "${VALID_EC2_INSTANCE_ID:-}",
        "rds_identifier": "${VALID_RDS_IDENTIFIER:-wp-shamo-rds-validation}",
        "wordpress_url": "${VALID_WORDPRESS_URL:-}",
        "test_timeout_minutes": "${TEST_TIMEOUT_MINUTES:-30}",
        "ssh_user": "${SSH_USER:-ubuntu}",
        "ssh_key_path": "${SSH_KEY_PATH:-~/.ssh/id_rsa}"
    },
    "deployment": {
        "auto_approve": "${AUTO_APPROVE:-false}",
        "rollback_on_failure": "${ROLLBACK_ON_FAILURE:-true}",
        "notification_email": "${NOTIFICATION_EMAIL:-}",
        "log_level": "${LOG_LEVEL:-INFO}",
        "backup_before_deployment": "${BACKUP_BEFORE_DEPLOYMENT:-true}"
    },
    "aws": {
        "region": "${AWS_REGION:-ap-northeast-1}",
        "profile": "${AWS_PROFILE:-default}",
        "max_retries": "${AWS_MAX_RETRIES:-3}"
    },
    "security": {
        "ssh_allowed_ip": "${SSH_ALLOWED_IP:-}",
        "enable_ssl": "${ENABLE_SSL:-true}",
        "enable_waf": "${ENABLE_WAF:-false}"
    }
} 