[PHP]
; 基本設定
memory_limit = {{ php_memory_limit | default('512M') }}
max_execution_time = {{ php_max_execution_time | default('300') }}
max_input_time = {{ php_max_input_time | default('300') }}
post_max_size = {{ php_post_max_size | default('512M') }}
upload_max_filesize = {{ php_upload_max_filesize | default('256M') }}

; エラー設定
display_errors = {{ php_display_errors | default('Off') }}
log_errors = {{ php_log_errors | default('On') }}
error_log = /var/log/php_errors.log

; セッション設定
session.gc_maxlifetime = {{ php_session_gc_maxlifetime | default('1440') }}
session.cookie_httponly = {{ php_session_cookie_httponly | default('1') }}

; セキュリティ設定
expose_php = {{ php_expose_php | default('Off') }}
allow_url_fopen = {{ php_allow_url_fopen | default('Off') }}
allow_url_include = {{ php_allow_url_include | default('Off') }}

; OPcache設定
opcache.enable = {{ php_opcache_enable | default('1') }}
opcache.memory_consumption = {{ php_opcache_memory_consumption | default('128') }}
opcache.interned_strings_buffer = {{ php_opcache_interned_strings_buffer | default('8') }}
opcache.max_accelerated_files = {{ php_opcache_max_accelerated_files | default('4000') }}
opcache.revalidate_freq = {{ php_opcache_revalidate_freq | default('2') }}
opcache.fast_shutdown = {{ php_opcache_fast_shutdown | default('1') }}

; 日付設定
date.timezone = {{ php_date_timezone | default('Asia/Tokyo') | trim | replace(' ', '') }} 