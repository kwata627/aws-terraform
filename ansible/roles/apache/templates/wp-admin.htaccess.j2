# =====================================================================
# wp-admin へのアクセス制御（admin.{{ wordpress_domain | default('example.com') }} 以外は 403）
# =====================================================================
<If "%{HTTP_HOST} != 'admin.{{ wordpress_domain | default('example.com') }}'">
    Require all denied
</If>

# =====================================================================
# admin.{{ wordpress_domain | default('example.com') }} からのアクセスは通常通り
# =====================================================================
<If "%{HTTP_HOST} == 'admin.{{ wordpress_domain | default('example.com') }}'">
    Require all granted
</If>

