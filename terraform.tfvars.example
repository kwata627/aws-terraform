# =============================================================================
# Terraform Variables Configuration Example
# =============================================================================
# 
# このファイルはTerraform変数の設定例です。
# 実際の使用時は、このファイルをコピーしてterraform.tfvarsとして使用し、
# 適切な値を設定してください。
# =============================================================================

# -----------------------------------------------------------------------------
# AWS Configuration
# -----------------------------------------------------------------------------

aws_region = "ap-northeast-1"
aws_profile = "default"

# -----------------------------------------------------------------------------
# Project Configuration
# -----------------------------------------------------------------------------

project = "wp-example"
environment = "production"

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------

vpc_cidr = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"
private_subnet_cidr = "10.0.2.0/24"
az1 = "ap-northeast-1a"

# -----------------------------------------------------------------------------
# EC2 Configuration
# -----------------------------------------------------------------------------

# EC2名（空の場合は自動生成: ${var.project}-ec2）
ec2_name = ""
# 検証用EC2名（空の場合は自動生成: ${var.project}-test-ec2）
validation_ec2_name = ""
ami_id = "ami-095af7cb7ddb447ef"  # Amazon Linux 2023
instance_type = "t2.micro"
root_volume_size = 8

# -----------------------------------------------------------------------------
# RDS Configuration
# -----------------------------------------------------------------------------

# RDS識別子（空の場合は自動生成: ${var.project}-rds）
rds_identifier = ""
# データベースパスワード（必須）
db_password = "your-secure-password-here"
snapshot_date = "20240101"

# -----------------------------------------------------------------------------
# S3 Configuration
# -----------------------------------------------------------------------------

# S3バケット名（空の場合は自動生成: ${var.project}-s3）
s3_bucket_name = ""

# -----------------------------------------------------------------------------
# Domain Configuration
# -----------------------------------------------------------------------------

domain_name = "example.com"
register_domain = false  # 既存ドメインの場合はfalseに設定

# ドメイン登録者情報（新規登録時のみ使用）
registrant_info = {
  first_name        = "John"
  last_name         = "Doe"
  organization_name = "Example Organization"
  email            = "admin@example.com"
  phone_number     = "+81.90-1234-5678"
  address_line_1   = "123 Example Street"
  city             = "Tokyo"
  state            = "Tokyo"
  country_code     = "JP"
  zip_code         = "100-0001"
}

# -----------------------------------------------------------------------------
# Validation Environment Configuration
# -----------------------------------------------------------------------------

enable_validation_ec2 = true    # 検証用EC2（停止状態で作成）
enable_validation_rds = false   # 検証用RDS（停止状態で作成）
validation_rds_snapshot_identifier = ""

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------

# SSH接続許可IP（セキュリティ強化）
# 例: "203.0.113.0/24"  # 特定のIPレンジ
# 例: "192.168.1.0/24"   # ローカルネットワーク
# 注意: 本番環境では必ず特定IPに制限してください
ssh_allowed_cidr = "0.0.0.0/0"

# -----------------------------------------------------------------------------
# Additional Tags
# -----------------------------------------------------------------------------

tags = {
  Owner       = "your-name"
  Purpose     = "wordpress-infrastructure"
  CostCenter  = "development"
  Backup      = "enabled"
  Monitoring  = "enabled"
} 

# Let's Encrypt設定
enable_lets_encrypt = true
lets_encrypt_email = "your-email@example.com"
lets_encrypt_staging = false  # 本番環境ではfalseに設定

# SSL設定
enable_ssl_setup = true 