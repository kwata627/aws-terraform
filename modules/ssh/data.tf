# =============================================================================
# SSH Module - Data Sources
# =============================================================================
# 
# このファイルはSSHモジュールのデータソース定義を含みます。
# AWSアカウント情報とリージョン情報を取得します。
# =============================================================================

# -----------------------------------------------------------------------------
# AWS Account Information
# -----------------------------------------------------------------------------

data "aws_caller_identity" "current" {
  # 現在のAWSアカウント情報を取得
}

data "aws_region" "current" {
  # 現在のAWSリージョン情報を取得
}

# -----------------------------------------------------------------------------
# Existing SSH Key Pairs (for backup/rotation)
# -----------------------------------------------------------------------------

data "aws_key_pair" "existing" {
  count = var.enable_key_rotation ? 1 : 0
  
  key_name = "${var.project}-${var.key_name_suffix}"
  
  depends_on = [aws_key_pair.ssh]
} 