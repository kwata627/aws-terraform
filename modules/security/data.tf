# =============================================================================
# Security Module - Data Sources
# =============================================================================
# 
# このファイルはSecurityモジュールのデータソース定義を含みます。
# AWSアカウント情報とリージョン情報を取得します。
# =============================================================================

# -----------------------------------------------------------------------------
# AWS Account Information
# -----------------------------------------------------------------------------

data "aws_caller_identity" "current" {
  # 現在のAWSアカウント情報を取得
}

data "aws_region" "current" {
  # 現在のAWSリージョン情報を取得
}

# -----------------------------------------------------------------------------
# VPC Information (Optional)
# -----------------------------------------------------------------------------

data "aws_vpc" "selected" {
  count = var.vpc_id != null ? 1 : 0
  id    = var.vpc_id
}

# -----------------------------------------------------------------------------
# Security Group Information (for validation)
# -----------------------------------------------------------------------------

data "aws_security_groups" "vpc_security_groups" {
  count = var.vpc_id != null ? 1 : 0
  
  filter {
    name   = "vpc-id"
    values = [var.vpc_id]
  }
  
  filter {
    name   = "group-name"
    values = ["${var.project}-*"]
  }
} 